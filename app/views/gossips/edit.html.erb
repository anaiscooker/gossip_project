<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@gossip) do |f| %>
      <%= f.label :anonymous_author %>
      <%= f.text_field :anonymous_author, class: 'form-control' %>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>
      <%= f.submit "Editer rumeur", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= link_to 'Revenir aux rumeurs', gossips_path %>
</div>